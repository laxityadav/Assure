<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coronavirus"
    android:padding="15dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="COVID-19 Symptom Tracker"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/txtTop"
        android:textSize="25sp"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Test for Corona"
        android:background="@drawable/custom_button"
        android:id="@+id/btnStart1"
        android:layout_below="@+id/txtTop"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Check Corona patient nearby"
        android:background="@drawable/custom_button"
        android:id="@+id/btnStart2"
        android:layout_below="@+id/btnStart1"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>