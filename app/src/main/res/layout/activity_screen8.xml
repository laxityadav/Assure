<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coronavirus"
    android:padding="20dp"
    tools:context=".Screen8">

    <TextView
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:id="@+id/txtName81"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:text="Your symptoms are more suggestive of flu or common cold, kindly call your family physician and follow his advise. Kindly note: If fever, cough persists for more than a week, kindly visit a specialist and advise followed. We will fight COVID-19 together."/>

    <TextView
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:id="@+id/txtName82"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        android:textStyle="bold"
        android:text="For laboratory (lab) tests you need to consult authorized hospitals or laboratories immediately as there is a high change of COVID-19 being positive. Take Care and stay away from your family and friends to protect them. We will fight COVID-19 together."/>

     <Button
         android:layout_width="200dp"
         android:layout_height="wrap_content"
         android:layout_marginTop="480dp"
         android:background="@drawable/custom_button"
         android:layout_centerHorizontal="true"
         android:id="@+id/btnNext8"
         android:text="Fill Other Response"/>

</RelativeLayout>